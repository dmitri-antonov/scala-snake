<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/app_name" android:weightSum="1">
    <view android:layout_width="wrap_content"
          android:layout_height="398dp"
          class="com.scalagames.snake.GameField" android:id="@+id/gameField" android:layout_gravity="center_horizontal"
          android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1">
        <TextView
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="time: "
                android:id="@+id/timeText" android:textAlignment="textStart"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/time" android:layout_weight="0.30"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="score: "
                android:id="@+id/scoreText" android:textAlignment="textEnd"
                android:gravity="right"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/score"/>
    </LinearLayout>
</LinearLayout>

